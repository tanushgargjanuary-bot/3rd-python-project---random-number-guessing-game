import random
secret = random.randint(1,100)

#Creating function which will check after guess. As guess will always be checked so its logical to make them single function
def guess_check():
	counter = 0 #counter outside the loop but inside the function

	while True:
		guess = int(input("Guess the number between 1 to 100: "))

		if 1<= guess <= 100: #Checking user guess logic

			if guess == secret:
				print("You guessed the number")
				counter += 1
				break

			elif guess < secret:
				print("The guess is smaller")
				counter += 1

			elif guess > secret:
				print("The guess is greater")
				counter += 1
		else:
			print("Invalid input")
	print(counter) #printing counter at last as it has been calculated above

guess_check()
